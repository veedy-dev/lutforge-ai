{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "incremental": true,
  "typescript": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "semiColons": "always",
    "quoteStyle": "alwaysDouble",
    "newLineKind": "lf",
    "useBraces": "whenNotSingleLine",
    "bracePosition": "nextLine",
    "nextControlFlowPosition": "nextLine",
    "operatorPosition": "nextLine",
    "singleBodyPosition": "maintain",
    "trailingCommas": "onlyMultiLine",
    "preferHanging": false,
    "preferSingleLine": false,
    "arrowFunction.useParentheses": "preferNone",
    "conditionalExpression.linePerExpression": false,
    "jsx.bracketPosition": "nextLine",
    "jsx.forceNewLinesSurroundingContent": false,
    "jsx.quoteStyle": "preferDouble",
    "jsx.multiLineParens": "prefer",
    "variableStatement.preferHanging": false,
    "enumDeclaration.memberSpacing": "maintain",
    "spaceAround": false,
    "spaceSurroundingProperties": true,
    "objectExpression.spaceSurroundingProperties": true,
    "objectPattern.spaceSurroundingProperties": true,
    "typeLiteral.spaceSurroundingProperties": true,
    "binaryExpression.linePerExpression": false,
    "memberExpression.linePerExpression": false,
    "unionAndIntersectionType.preferHanging": false,
    "functionExpression.spaceBeforeParentheses": false,
    "getAccessor.spaceBeforeParentheses": false,
    "setAccessor.spaceBeforeParentheses": false,
    "constructorType.spaceAfterNewKeyword": false,
    "constructSignature.spaceAfterNewKeyword": false
  },
  "json": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false,
    "newLineKind": "lf"
  },
  "markdown": {
    "lineWidth": 100,
    "textWrap": "maintain"
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,json,md}"
  ],
  "excludes": [
    "**/node_modules",
    "**/.next",
    "**/dist",
    "**/build",
    "**/.git",
    "**/coverage",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/.vscode",
    "**/.idea",
    "**/venv",
    "**/__pycache__"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.93.0.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.8.wasm"
  ]
}
